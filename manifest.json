{
    "manifest_version": 3,
    "name": "Motion - Solana Wallet",
    "version": "1.0",
    "description": "A crypto wallet reimagined for Solana & Only Solana",
    "icons": {
      "16": "/icons/16x16.png",
      "19": "/icons/19x19.png",
      "32": "/icons/32x32.png",
      "38": "/icons/38x38.png",
      "48": "/icons/48x48.png",
      "128": "/icons/128x128.png"
    },
    "permissions": [
      "activeTab",
      "windows",
      "storage"
    ],
    "background": {
      "service_worker": "dist/background.bundle.js"
    },
    "action": {
      "default_icon": {
        "16": "/icons/16x16.png",
        "19": "/icons/19x19.png",
        "32": "/icons/32x32.png",
        "38": "/icons/38x38.png"
      },
      "default_popup": "src/main.html"
    }
  }
  